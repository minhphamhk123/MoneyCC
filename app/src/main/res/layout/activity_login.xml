<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/login_background">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="130dp"
        android:background="#59312F2F"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="30dp"
            android:text="ĐĂNG NHẬP"
            android:textColor="#FFFFFF"
            android:background="#4D2196F3"
            android:textSize="35dp"
            android:textStyle="bold" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/edtusername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="#3F51B5"
            app:errorEnabled="true">

            <EditText
                android:id="@+id/username_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/inputeditor"
                android:drawableLeft="@drawable/username"
                android:fontFamily="serif"
                android:hint="Tài Khoản"
                android:inputType="text|textPersonName"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFEB3B"
                android:textSize="20dp"
                android:textStyle="bold" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/edtpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#3F51B5" >

            <EditText
                android:id="@+id/password_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/inputeditor"
                android:drawableLeft="@drawable/sharp_lock_white_18dp"
                android:fontFamily="serif"
                android:hint="Mật Khẩu"
                android:inputType="text|textPassword"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FF5722"
                android:textSize="20dp"
                android:textStyle="bold" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1">

        <CheckBox
            android:id="@+id/cbtaikhoan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:text="Ghi Nhớ"
            android:textColor="#3F51B5"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/log_txtupdate_pass"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Cập Nhật Mật Khẩu"
            android:textAlignment="textEnd"
            android:textAllCaps="false"
            android:textColor="#3F51B5"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_below="@id/line2"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:weightSum="2">


        <Button
            android:id="@+id/btndangnhap"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#4D2196F3"
            android:fontFamily="serif"
            android:text="Đăng Nhập"
            android:textColor="#3F51B5"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btndangky"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#4DFF5722"
            android:fontFamily="serif"
            android:text="Đăng Ký"
            android:textColor="#F44336"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>