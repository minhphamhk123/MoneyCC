<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="10dp">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/cardview"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4DFFC107">

            <ImageView
                android:id="@+id/imgtienloaichi"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/image_tien" />

            <TextView
                android:id="@+id/txttenloaichi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/imgtienloaichi"
                android:text="Tên Loại Chi"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imgdeleteloaichi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_toLeftOf="@id/imgedtloaichi"
                android:src="@drawable/delete" />

            <ImageView
                android:id="@+id/imgedtloaichi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="47dp"
                android:src="@drawable/edt" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
