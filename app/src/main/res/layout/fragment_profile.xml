<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8010114">

    <LinearLayout
        android:id="@+id/line01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Thông Tin Cá Nhân"
                android:textColor="#FF9800"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_txt_ten"
                android:layout_below="@id/txt_profile"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="serif"
                android:layout_marginLeft="10dp"
                android:text="  Họ tên:"
                android:textColor="#009688"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profile_edt_hoten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_profile"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/profile_txt_ten"
                android:background="@drawable/input"
                android:hint="Họ và Tên"
                android:padding="7dp" />

            <TextView
                android:id="@+id/txt_taikhoan"
                android:layout_below="@id/profile_txt_ten"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="serif"
                android:text="  Tài khoản:"
                android:textColor="#2196F3"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profile_edt_taikhoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_txt_ten"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/txt_taikhoan"
                android:background="@drawable/input"
                android:hint="Tên Tài Khoản"
                android:padding="7dp"/>

            <TextView
                android:id="@+id/txt_matkhau"
                android:layout_below="@id/txt_taikhoan"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="serif"
                android:text="*Xem Mật khẩu:"
                android:textColor="#FF5722"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profile_edt_matkhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_taikhoan"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/txt_matkhau"
                android:background="@drawable/input"
                android:hint="********"
                android:padding="7dp" />

            <TextView
                android:id="@+id/txtv_hinhanh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_matkhau"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:fontFamily="serif"
                android:text="(*) Nhấn vào để xem!!!"
                android:textColor="#FFEB3B"
                android:textSize="10dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/profile_image"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_below="@id/line01"
            android:layout_margin="15dp"
            android:src="@drawable/nospeaknosee" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/line01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/profile_txt_update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:fontFamily="serif"
            android:text="**********"
            android:textColor="#009688"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>